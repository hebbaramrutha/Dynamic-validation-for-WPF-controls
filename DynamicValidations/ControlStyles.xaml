    <SolidColorBrush x:Key="BrushSelectedRowHorizontalGridLines" Color="#FFE5E5E5" />
    <SolidColorBrush x:Key="BrushGridTextForeground" Color="#FF333333" />
    <SolidColorBrush x:Key="BrushGridBackground" Color="#FFE1E1E1"/>
    <SolidColorBrush x:Key="BrushBlue" Color="{StaticResource ColorBlue}" />

    <SolidColorBrush x:Key="CrimsonRedBrush" Color="#ED1E30"/>
    <SolidColorBrush x:Key="MineShaftBrush" Color="#333333"/>
    <SolidColorBrush x:Key="SilverChaliceBrush" Color="#A0A0A0"/>
    <SolidColorBrush x:Key="GreyBrush" Color="#A8A8A8"/>
    <SolidColorBrush x:Key="BrushTabControlBlue" Color="#FF0D51A2"/>
    <SolidColorBrush x:Key="BrushWhite" Color="White"/>
    <SolidColorBrush x:Key="LightGreyText" Color="#6F6F6F"/>
    <SolidColorBrush x:Key="ErrorBorderBrush" Color="Red"/>
    <SolidColorBrush x:Key="ErrorTooltipBackgroundBrush" Color="White"/>
    <SolidColorBrush x:Key="ErrorTooltipForegroundBrush" Color="Red"/>
