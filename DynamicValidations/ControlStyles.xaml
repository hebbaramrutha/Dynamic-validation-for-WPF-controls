    <SolidColorBrush x:Key="PositiveButtonWithWhiteBackground" Color="White"/>
    <SolidColorBrush x:Key="PositiveButtonBorderBrush" Color="#FF0D4FA1"/>
    <SolidColorBrush x:Key="PositiveForegroundBrush" Color="White"/>
